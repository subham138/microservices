<!DOCTYPE html>
<html lang="en">

<head>
    <title>Microservices</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/css/bootstrap-select.min.css">


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</head>

<body>

    <div class="container mt-3">
        <h2>Stacked form</h2>
        <form action="/newapiuser" method="post">
            <div class="mb-3 mt-3">
                <label for="">Project Name:</label>
                <input type="text" class="form-control" id="project_name" placeholder="Enter email" name="project_name">
            </div>
            <div class="mb-3">
                <label for="db_type" class="form-label">Select list (select one):</label>
                <select class="form-control" id="db_type" name="db_type">
                    <option value="">Select DB</option>
                    <% db_details.forEach(dt=> { %>
                        <option value="<%= dt.id %>">
                            <%= dt.name %>
                        </option>
                        <% })%>
                </select>
            </div>
            <div class="mb-3">
                <label for="db_host">DB Host</label>
                <input type="text" class="form-control" id="db_host" placeholder="Enter host name" name="db_host">
            </div>
            <div class="mb-3">
                <label for="db_user">DB User</label>
                <input type="text" class="form-control" id="db_user" placeholder="Enter user name" name="db_user">
            </div>
            <div class="mb-3">
                <label for="db_pass">DB Password</label>
                <input type="text" class="form-control" id="db_pass" placeholder="Enter db password" name="db_pass">
            </div>
            <div class="mb-3">
                <label for="db_name">DB Name</label>
                <input type="text" class="form-control" id="db_name" placeholder="Enter db name" name="db_name">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>

</html>